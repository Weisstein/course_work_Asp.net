@model Build
@{
    ViewData["Title"] = "AddBuild";
}

<form asp-action="AddBuild" method="post" class="d-flex">
    <div class="flex-fill justify-content-start">
        <div class ="form-group">
            <label asp-for="Name" class="form-label">Наименование сборки</label>
            <input asp-for="Name" required class="form-control border-secondary bg-dark text-secondary"/>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label">Описание сборки</label>
            <textarea asp-for="Description"  class="form-control border-secondary bg-dark text-secondary" rows="3"></textarea>
        </div>
        <div>
           @foreach(var types in ViewBag.Types)
            {
                <div class="item-unselected" id=@types.Id>
                    @types.Name
                </div>
            }
        </div>
    </div>
    <div class="form-group flex-fill justify-content-end" style="margin-left: 100px; margin-top: 30px">
        <div class="border rounded border-secondary">
            <p class="p-2">Стоимость ПК</p>
                @if(ViewBag.Price == null)
                {
                    <p class="p-2">0 руб.</p>
                }
                else
                {
                    <p class="p-2">@ViewBag.Price руб.</p>
                }
            <button type="submit" class="btn border-0 btn-outline-secondary "> Сохранить </button>
        </div>
    </div>
</form>
